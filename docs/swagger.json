{
    "schemes": [
        "http"
    ],
    "swagger": "2.0",
    "info": {
        "description": "This is a sample music service.",
        "title": "Swagger Songs",
        "contact": {},
        "version": "1.0"
    },
    "host": "localhost:8080",
    "paths": {
        "/songs": {
            "post": {
                "description": "Create new record",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Фонотека"
                ],
                "parameters": [
                    {
                        "description": "input data",
                        "name": "json",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/models.SongDetails"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Created",
                        "schema": {
                            "$ref": "#/definitions/models.Song"
                        }
                    },
                    "400": {
                        "description": "Bad request",
                        "schema": {
                            "$ref": "#/definitions/rest.ErrorResponse"
                        }
                    },
                    "500": {
                        "description": "Internal error",
                        "schema": {
                            "$ref": "#/definitions/rest.ErrorResponse"
                        }
                    },
                    "502": {
                        "description": "Bad Gateway",
                        "schema": {
                            "$ref": "#/definitions/rest.ErrorResponse"
                        }
                    }
                }
            }
        },
        "/songs/page/{page_num}/records/{per_page}": {
            "get": {
                "description": "Поиск по фонотеке",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Фонотека"
                ],
                "parameters": [
                    {
                        "type": "integer",
                        "description": "Page number from 0",
                        "name": "page_num",
                        "in": "path",
                        "required": true
                    },
                    {
                        "type": "integer",
                        "description": "Records per page",
                        "name": "per_page",
                        "in": "path",
                        "required": true
                    },
                    {
                        "type": "string",
                        "description": "Searching group name",
                        "name": "group_name",
                        "in": "query"
                    },
                    {
                        "type": "string",
                        "description": "Song name",
                        "name": "song_name",
                        "in": "query"
                    },
                    {
                        "type": "string",
                        "description": "Release date (example 17.06.2006)",
                        "name": "release_date",
                        "in": "query"
                    },
                    {
                        "type": "string",
                        "description": "Song text",
                        "name": "song_text",
                        "in": "query"
                    },
                    {
                        "type": "string",
                        "description": "Link",
                        "name": "link",
                        "in": "query"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "ok",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/models.Song"
                            }
                        }
                    },
                    "400": {
                        "description": "Bad request",
                        "schema": {
                            "$ref": "#/definitions/rest.ErrorResponse"
                        }
                    },
                    "404": {
                        "description": "Not found",
                        "schema": {
                            "$ref": "#/definitions/rest.ErrorResponse"
                        }
                    },
                    "500": {
                        "description": "Internal error",
                        "schema": {
                            "$ref": "#/definitions/rest.ErrorResponse"
                        }
                    }
                }
            }
        },
        "/songs/{id}": {
            "put": {
                "description": "Update record",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Фонотека"
                ],
                "parameters": [
                    {
                        "type": "integer",
                        "description": "Song ID",
                        "name": "id",
                        "in": "path",
                        "required": true
                    },
                    {
                        "description": "input data",
                        "name": "json",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/models.UpdateParams"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "ok",
                        "schema": {
                            "$ref": "#/definitions/models.Song"
                        }
                    },
                    "400": {
                        "description": "Bad request",
                        "schema": {
                            "$ref": "#/definitions/rest.ErrorResponse"
                        }
                    },
                    "404": {
                        "description": "Not found",
                        "schema": {
                            "$ref": "#/definitions/rest.ErrorResponse"
                        }
                    },
                    "500": {
                        "description": "Internal error",
                        "schema": {
                            "$ref": "#/definitions/rest.ErrorResponse"
                        }
                    }
                }
            },
            "delete": {
                "description": "Delete record",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Фонотека"
                ],
                "parameters": [
                    {
                        "type": "integer",
                        "description": "Song ID",
                        "name": "id",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "ok"
                    },
                    "400": {
                        "description": "Bad request",
                        "schema": {
                            "$ref": "#/definitions/rest.ErrorResponse"
                        }
                    },
                    "404": {
                        "description": "Not found",
                        "schema": {
                            "$ref": "#/definitions/rest.ErrorResponse"
                        }
                    },
                    "500": {
                        "description": "Internal error",
                        "schema": {
                            "$ref": "#/definitions/rest.ErrorResponse"
                        }
                    }
                }
            }
        },
        "/songs/{id}/verse/{vid}": {
            "get": {
                "description": "Получить куплет песни",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Фонотека"
                ],
                "parameters": [
                    {
                        "type": "integer",
                        "description": "Song ID",
                        "name": "id",
                        "in": "path",
                        "required": true
                    },
                    {
                        "type": "integer",
                        "description": "Номер куплета, начиная с 1",
                        "name": "vid",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "ok",
                        "schema": {
                            "$ref": "#/definitions/models.Verse"
                        }
                    },
                    "400": {
                        "description": "Bad request",
                        "schema": {
                            "$ref": "#/definitions/rest.ErrorResponse"
                        }
                    },
                    "404": {
                        "description": "Not found",
                        "schema": {
                            "$ref": "#/definitions/rest.ErrorResponse"
                        }
                    },
                    "500": {
                        "description": "Internal error",
                        "schema": {
                            "$ref": "#/definitions/rest.ErrorResponse"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "models.Song": {
            "type": "object",
            "required": [
                "group",
                "link",
                "name",
                "releaseDate",
                "text"
            ],
            "properties": {
                "group": {
                    "description": "Group name",
                    "type": "string",
                    "example": "Muse"
                },
                "id": {
                    "type": "integer",
                    "example": 1
                },
                "link": {
                    "description": "URL link",
                    "type": "string",
                    "example": "http://example.org"
                },
                "name": {
                    "description": "Song name",
                    "type": "string",
                    "example": "Supermassive Black Hole"
                },
                "releaseDate": {
                    "description": "Release date in 02.01.2006 format",
                    "type": "string",
                    "example": "16.07.2006"
                },
                "text": {
                    "description": "Song text",
                    "type": "string",
                    "example": "Some text\n"
                }
            }
        },
        "models.SongDetails": {
            "type": "object",
            "required": [
                "group",
                "song"
            ],
            "properties": {
                "group": {
                    "description": "Group name",
                    "type": "string",
                    "example": "Muse"
                },
                "song": {
                    "description": "Song name",
                    "type": "string",
                    "example": "Supermassive Black Hole"
                }
            }
        },
        "models.UpdateParams": {
            "type": "object",
            "required": [
                "group_name",
                "link",
                "release_date",
                "song_name",
                "song_text"
            ],
            "properties": {
                "group_name": {
                    "description": "Group name",
                    "type": "string",
                    "example": "Muse"
                },
                "link": {
                    "description": "URL link",
                    "type": "string",
                    "example": "http://example.org"
                },
                "release_date": {
                    "description": "Release date in 02.01.2006 format",
                    "type": "string",
                    "example": "16.07.2006"
                },
                "song_name": {
                    "description": "Song name",
                    "type": "string",
                    "example": "Supermassive Black Hole"
                },
                "song_text": {
                    "description": "Song text",
                    "type": "string",
                    "example": "Some text\n\n Some text2\n"
                }
            }
        },
        "models.Verse": {
            "type": "object",
            "properties": {
                "num": {
                    "description": "verse number",
                    "type": "string",
                    "example": "1"
                },
                "text": {
                    "description": "verse text",
                    "type": "string",
                    "example": "Some text\n"
                }
            }
        },
        "rest.ErrorResponse": {
            "type": "object",
            "properties": {
                "error": {
                    "description": "Error string",
                    "type": "string",
                    "example": "error description"
                }
            }
        }
    }
}